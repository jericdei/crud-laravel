{
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "wrapAttributes": "auto",
    "sortTailwindcssClasses": true,
    "plugins": ["prettier-plugin-tailwindcss", "@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4
            }
        }
    ]
}
